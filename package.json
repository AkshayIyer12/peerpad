{
  "name": "peerpad",
  "version": "0.0.1",
  "description": "Peerpad",
  "main": "index.js",
  "scripts": {
    "start": "http-server -c-1 -p 12345 public",
    "compile": "npm run compile:index && npm run compile:doc && npm run compile:static",
    "compile:index": "browserify src/index.js -o public/js/index.js -d",
    "compile:doc": "browserify src/doc.js -o public/js/doc.js -d",
    "compile:static": "browserify src/static.js -o public/js/static.js -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pgte/peerpad.git"
  },
  "keywords": [
    "p2p",
    "decentralized",
    "editor"
  ],
  "author": "Pedro Teixeira <i@pgte.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pgte/peerpad/issues"
  },
  "homepage": "https://github.com/pgte/peerpad#readme",
  "dependencies": {
    "async": "^2.5.0",
    "browserify": "^14.4.0",
    "bs58": "^4.0.1",
    "concat-stream": "^1.6.0",
    "http-server": "^0.10.0",
    "ipfs": "^0.25.0",
    "libp2p-crypto": "^0.8.8",
    "lodash.debounce": "^4.0.8",
    "safe-buffer": "^5.1.1",
    "y-array": "^10.1.3",
    "y-indexeddb": "^8.1.9",
    "y-ipfs-connector": "^1.2.0",
    "y-memory": "^8.0.9",
    "y-richtext": "^9.0.8",
    "yjs": "^12.3.2"
  }
}
